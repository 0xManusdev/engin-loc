model User {
  id         Int        @id @default(autoincrement())
  nom        String
  prenom     String
  email      String     @unique
  telephone  String     @unique
  motDePasse String
  role       Role
  createdAt  DateTime   @default(now())

  client     Client?
  partenaire Partenaire?
}

model Client {
  userId Int @id
  user   User @relation(fields: [userId], references: [id])
}

model Partenaire {
  userId          Int    @id
  numeroCNI       String
  nomSociete      String
  adresseSociete  String
  categorieEngins String

  user            User   @relation(fields: [userId], references: [id])
}

enum Role {
  CLIENT
  PARTENAIRE
}
